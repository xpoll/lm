<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="ItemAttribute">
    <resultMap id="ItemAttributeMap" type="ItemAttribute">
        <result column="item_id" property="itemId"/>
        <result column="sku_attributes" property="skuAttrsJson"/>
        <result column="other_attributes" property="otherAttrsJson"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_item_attributes
    </sql>
    

    <sql id="cols">
        item_id, sku_attributes, other_attributes, created_at, updated_at
    </sql>

    <sql id="vals">
        #{itemId}, #{skuAttrsJson},#{otherAttrsJson},  now(), now()
    </sql>

    <sql id="criterias">
        WHERE 1 = 1
        <if test="itemId != null"> AND item_id = #{itemId} </if>
    </sql>

    <insert id="create" parameterType="ItemAttribute" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb" />
        (<include refid="cols" />)
        VALUES
        (<include refid="vals" />)
    </insert>


    <select id="findByItemId" parameterType="long" resultMap="ItemAttributeMap" >
        SELECT <include refid="cols" />
        FROM <include refid="tb" />
        WHERE item_id = #{itemId}
    </select>

    <select id="findByItemIds" parameterType="list" resultMap="ItemAttributeMap">
        SELECT
        <include refid="cols"/>
        FROM
        <include refid="tb"/>
        WHERE item_id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="findById" parameterType="long" resultMap="ItemAttributeMap" >
        SELECT <include refid="cols" />
        FROM <include refid="tb" />
        WHERE item_id = #{itemId}
    </select>

    <select id="list" parameterType="ItemAttribute" resultMap="ItemAttributeMap">
        SELECT 
        <include refid="cols"/>
        FROM
        <include refid="tb"/>
        <include refid="criterias"/>
    </select>

    <update id="update" parameterType="ItemAttribute">
        UPDATE <include refid="tb"/>
        <set>
            <if test="skuAttrsJson != null"> sku_attributes = #{skuAttrsJson}, </if>
            <if test="otherAttrsJson != null"> other_attributes = #{otherAttrsJson}, </if>
            updated_at=now()
        </set>
        WHERE item_id=#{itemId}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE item_id = #{itemId}
    </delete>

</mapper>