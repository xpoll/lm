<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="OrderTransferRule">
    <resultMap id="OrderTransferRuleMap" type="OrderTransferRule">
        <id column="id" property="id"/>
        <result column="start_node_instance_id" property="startNodeInstanceId"/>
        <result column="end_node_instance_id" property="endNodeInstanceId"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!--  订单流程节点实例表  -->
    <sql id="tb">
        parana_order_transfer_rules
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        start_node_instance_id, end_node_instance_id, created_at, updated_at
    </sql>

    <sql id="vals">
        #{startNodeInstanceId}, #{endNodeInstanceId}, now(), now()
    </sql>

    <insert id="create" parameterType="OrderTransferRule" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="OrderTransferRuleMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </select>

    <select id="findByStartAndEnd" parameterType="map" resultMap="OrderTransferRuleMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE start_node_instance_id = #{startId} and
        end_node_instance_id = #{endId}
    </select>

    <!--  更新  -->
    <update id="update" parameterType="OrderNodeInstance">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="startNodeInstanceId != null">start_node_instance_id = #{startNodeInstanceId},</if>
            <if test="endNodeInstanceId != null">end_node_instance_id = #{endNodeInstanceId},</if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </delete>


</mapper>
