<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="BackCategory">

    <resultMap id="BackCategoryMap" type="BackCategory">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="name" property="name"/>
        <result column="level" property="level"/>
        <result column="status" property="status"/>
        <result column="has_children" property="hasChildren"/>
        <result column="has_spu" property="hasSpu"/>
        <result column="outer_id" property="outerId"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_back_categories
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        pid, name, level, status, has_children, has_spu, outer_id, created_at, updated_at
    </sql>

    <sql id="vals">
        #{pid}, #{name}, #{level}, #{status}, #{hasChildren}, #{hasSpu}, #{outerId}, now(), now()
    </sql>


    <insert id="create" parameterType="BackCategory" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="BackCategoryMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="BackCategoryMap">
        SELECT id,
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach collection="list" separator="," open="("
                 close=")" item="id">
            #{id}
        </foreach>
    </select>


    <select id="findByPid" parameterType="long" resultMap="BackCategoryMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE pid = #{pid} AND status = 1
    </select>

    <select id="findByPidAndName" parameterType="map" resultMap="BackCategoryMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE pid = #{pid} and name = #{name}
    </select>

    <select id="findByOuterId" parameterType="map" resultMap="BackCategoryMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE outer_id=#{outerId}
    </select>


    <update id="updateStatus" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <update id="update" parameterType="BackCategory">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="hasSpu!=null">has_spu=#{hasSpu},</if>
            <if test="hasChildren!=null">has_children=#{hasChildren},</if>
            <if test="outerId != null">outer_id = #{outerId},</if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>
</mapper>