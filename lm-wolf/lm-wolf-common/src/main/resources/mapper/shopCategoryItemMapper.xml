<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="ShopCategoryItem">

    <resultMap id="ShopCategoryItemMap" type="ShopCategoryItem">
        <id column="id" property="id"/>
        <result column="shop_id" property="shopId"/>
        <result column="item_id" property="itemId"/>
        <result column="shop_category_id" property="shopCategoryId"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_shop_category_items
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        shop_id, item_id,  shop_category_id,  created_at, updated_at
    </sql>

    <sql id="vals">
        #{shopId}, #{itemId},  #{shopCategoryId},now(), now()
    </sql>

    <insert id="create" parameterType="ShopCategoryItem" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <insert id="creates" parameterType="list">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        <foreach collection="list" item="i" index="index" separator=",">
            (
            #{i.shopId}, #{i.itemId}, #{i.shopCategoryId}, now(), now()
            )
        </foreach>
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </delete>

    <delete id="deletes">
        DELETE FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach collection="list" open="(" separator="," close=")" item="id">
            #{id}
        </foreach>
    </delete>

    <select id="findById" parameterType="long" resultMap="ShopCategoryItemMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="countByShopIdAndCategoryId" parameterType="map" resultType="long">
        SELECT count(1) FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId} and shop_category_id = #{shopCategoryId}
    </select>

    <select id="findByShopIdAndCategoryId" parameterType="map" resultType="long">
        SELECT item_id FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId} and shop_category_id = #{shopCategoryId}
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countUnknownByShopId" parameterType="map" resultType="long">
        SELECT count(1) FROM (
        SELECT item_id FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId}
        GROUP BY item_id
        HAVING count(1) = 1
        ) AS tb
    </select>

    <select id="findUnknownByShopId" parameterType="map" resultType="long">
        SELECT item_id FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId}
        GROUP BY item_id
        HAVING count(1) = 1
        ORDER BY item_id ASC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="findByShopIdAndItemId" parameterType="map" resultMap="ShopCategoryItemMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id=#{shopId} and item_id=#{itemId}
    </select>

    <select id="findByShopIdAndItemIds" parameterType="map" resultMap="ShopCategoryItemMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id=#{shopId} and item_id in
        <foreach item="itemId" collection="itemIds"
                 open="(" separator="," close=")">
            #{itemId}
        </foreach>
    </select>

    <delete id="deleteBy" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE shop_id=#{shopId}
        <if test="itemId!=null">and item_id=#{itemId}</if>
        <if test="shopCategoryId!=null">and shop_category_id=#{shopCategoryId}</if>
    </delete>


</mapper>