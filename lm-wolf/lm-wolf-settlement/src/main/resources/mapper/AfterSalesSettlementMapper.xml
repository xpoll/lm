<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="AfterSalesSettlement">
    <resultMap id="AfterSalesSettlementMap" type="AfterSalesSettlement">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="seller_id" property="sellerId"/>
        <result column="seller_name" property="sellerName"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="buyer_id" property="buyerId"/>
        <result column="buyer_name" property="buyerName"/>
        <result column="refund_amount" property="refundAmount"/>
        <result column="commission" property="commission"/>
        <result column="channel" property="channel"/>
        <result column="order_type" property="orderType"/>
        <result column="is_checked" property="isChecked"/>
        <result column="description" property="description"/>
        <result column="refund_at" property="refundAt"/>
        <result column="checked_at" property="checkedAt"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_after_sales_settlements
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        order_id,  seller_id, seller_name, shop_id, shop_name, buyer_id, buyer_name,
        refund_amount, commission, channel, order_type, is_checked, description, refund_at, checked_at, created_at, updated_at
    </sql>

    <sql id="vals">
        #{orderId},  #{sellerId}, #{sellerName}, #{shopId}, #{shopName}, #{buyerId},
        #{buyerName}, #{refundAmount},#{commission}, #{channel}, #{orderType}, #{isChecked}, #{description}, #{refundAt},
        #{checkedAt}, now(), now()
    </sql>

    <sql id="criteria">
        WHERE 1 = 1
        <if test="id != null">AND id = #{id}</if>
        <if test="isChecked != null">AND is_checked = #{isChecked}</if>
        <if test="orderId != null">AND order_id = #{orderId}</if>
        <if test="orderType != null">AND order_type = #{orderType}</if>
        <if test="sellerId != null">AND seller_id = #{sellerId}</if>
        <if test="shopId != null">AND shop_id = #{shopId}</if>
        <if test="channel != null">AND channel = #{channel}</if>
        <if test="refundStartAt != null">AND refund_at &gt;= #{refundStartAt}</if>
        <if test="refundEndAt != null">AND refund_at &lt; #{refundEndAt}</if>
        <if test="checkedStartAt != null">AND checked_at &gt;= #{checkedStartAt}</if>
        <if test="checkedEndAt != null">AND checked_at &lt; #{checkedEndAt}</if>
        <if test="startAt != null">AND created_at &gt;= #{startAt}</if>
        <if test="endAt != null">AND created_at &lt; #{endAt}</if>
    </sql>

    <sql id="update_criteria">
        <set>
            <if test="isChecked != null">is_checked = #{isChecked},</if>
            <if test="checkedAt != null">checked_at = #{checkedAt},</if>
            updated_at=now()
        </set>
    </sql>

    <select id="findById" parameterType="long" resultMap="AfterSalesSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="list" parameterType="map" resultMap="AfterSalesSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <insert id="create" parameterType="AfterSalesSettlement" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <update id="update" parameterType="AfterSalesSettlement">
        UPDATE
        <include refid="tb"/>
        <include refid="update_criteria"/>
        WHERE id = #{id}
    </update>

    <select id="findBySellerId" parameterType="long" resultMap="AfterSalesSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE seller_id=#{sellerId}
    </select>

    <select id="findByShopId" parameterType="long" resultMap="AfterSalesSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId}
    </select>

    <select id="findByShopIds" parameterType="long" resultMap="AfterSalesSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id IN
        <foreach item="shopId" collection="list"
                 open="(" separator="," close=")">
            #{shopId}
        </foreach>
    </select>

    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="AfterSalesSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY id DESC LIMIT #{offset}, #{limit}
    </select>



    <!-- 查询需要对账的记录 -->

    <sql id="queryCondition">
        WHERE is_checked != #{isChecked}
    </sql>

    <select id="pagingNeedCheck" parameterType="map" resultMap="AfterSalesSettlementMap">
        select id, <include refid="cols_all"/>
        from <include refid="tb"/>
        <include refid="queryCondition"/>
        order by id desc limit #{offset},#{limit}
    </select>

    <select id="countNeedCheck" parameterType="map" resultType="long">
        select count(1)
        from <include refid="tb"/>
        <include refid="queryCondition"/>
    </select>
</mapper>