<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="DiscountDetail">
    <resultMap id="DiscountDetailMap" type="DiscountDetail">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="discount" property="discount"/>
        <result column="type" property="type"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_discount_details
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        order_id,discount,`type`,description, created_at, updated_at
    </sql>

    <sql id="vals">
        #{orderId}, #{discount}, #{type}, #{description},now(), now()
    </sql>

    <sql id="criteria">
        WHERE 1 = 1
        <if test="id != null">AND id = #{id}</if>
        <if test="type != null">AND `type` = #{type}</if>
        <if test="startAt != null">AND created_at &gt;= #{startAt}</if>
        <if test="endAt != null">AND created_at &lt; #{endAt}</if>
    </sql>


    <select id="findById" parameterType="long" resultMap="DiscountDetailMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="list" parameterType="map" resultMap="DiscountDetailMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <insert id="create" parameterType="DiscountDetail" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>


    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="DiscountDetailMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY id DESC LIMIT #{offset}, #{limit}
    </select>



</mapper>