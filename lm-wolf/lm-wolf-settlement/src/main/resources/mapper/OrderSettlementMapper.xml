<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="OrderSettlement">
    <resultMap id="OrderSettlementMap" type="OrderSettlement">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="seller_id" property="sellerId"/>
        <result column="seller_name" property="sellerName"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="buyer_id" property="buyerId"/>
        <result column="buyer_name" property="buyerName"/>
        <result column="type" property="type"/>
        <result column="pay_type" property="payType"/>
        <result column="is_checked" property="isChecked"/>
        <result column="order_status" property="orderStatus"/>
        <result column="merge_paid" property="mergePaid"/>
        <result column="system_no" property="systemNo"/>
        <result column="origin_fee" property="originFee"/>
        <result column="seller_discount" property="sellerDiscount"/>
        <result column="ship_fee" property="shipFee"/>
        <result column="receivable" property="receivable"/>
        <result column="platform_discount" property="platformDiscount"/>
        <result column="fee" property="fee"/>
        <result column="refund_fee" property="refundFee"/>
        <result column="third_party_fee" property="thirdPartyFee"/>
        <result column="commission" property="commission"/>
        <result column="memo" property="memo"/>
        <result column="sale_tax" property="saleTax"/>
        <result column="sale_tax_rate" property="saleTaxRate"/>
        <result column="ship_fee_sale_tax" property="shipFeeSaleTax"/>
        <result column="ship_fee_discount" property="shipFeeDiscount"/>
        <result column="integral" property="integral"/>
        <result column="balance" property="balance"/>
        <result column="finished_at" property="finishedAt"/>
        <result column="checked_at" property="checkedAt"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_order_settlements
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        order_id, seller_id, seller_name, shop_id, shop_name, buyer_id, buyer_name, `type`,
        pay_type, is_checked, order_status, merge_paid, system_no, origin_fee, seller_discount, ship_fee, receivable,
        platform_discount, fee, refund_fee,third_party_fee, commission, memo, sale_tax, sale_tax_rate,ship_fee_sale_tax,ship_fee_discount, integral,
        balance, finished_at, checked_at, created_at, updated_at
    </sql>

    <sql id="vals">
        #{orderId}, #{sellerId}, #{sellerName}, #{shopId}, #{shopName}, #{buyerId}, #{buyerName}, #{type}, #{payType}, #{isChecked}, #{orderStatus}, #{mergePaid}, #{systemNo}, #{originFee},
        #{sellerDiscount}, #{shipFee}, #{receivable}, #{platformDiscount}, #{fee}, #{refundFee}, #{thirdPartyFee},#{commission},
        #{memo}, #{saleTax}, #{saleTaxRate}, #{shipFeeSaleTax},#{shipFeeDiscount},#{integral}, #{balance},  #{finishedAt}, #{checkedAt},
        now(), now()
    </sql>

    <sql id="criteria">
        WHERE 1 = 1
        <if test="id != null">AND id = #{id}</if>
        <if test="orderId != null">AND order_id = #{orderId}</if>
        <if test="sellerId != null">AND seller_id = #{sellerId}</if>
        <if test="shopId != null">AND shop_id = #{shopId}</if>
        <if test="type != null">AND `type` = #{type}</if>
        <if test="payType != null">AND pay_type = #{payType}</if>
        <if test="isChecked != null">AND is_checked = #{isChecked}</if>
        <if test="orderStatus != null">AND order_status = #{orderStatus}</if>
        <if test="finishStartAt != null">AND finished_at &gt;= #{finishStartAt}</if>
        <if test="finishEndAt != null">AND finished_at &lt; #{finishEndAt}</if>
        <if test="checkedStartAt != null">AND checked_at &gt;= #{checkedStartAt}</if>
        <if test="checkedEndAt != null">AND checked_at &lt; #{checkedEndAt}</if>
        <if test="startAt != null">AND created_at &gt;= #{startAt}</if>
        <if test="endAt != null">AND created_at &lt; #{endAt}</if>
    </sql>

    <sql id="update_criteria">
        <set>
            <if test="thirdPartyFee != null">third_party_fee = #{thirdPartyFee},</if>
            <if test="isChecked != null">is_checked = #{isChecked},</if>
            <if test="orderStatus != null">order_status = #{orderStatus},</if>
            <if test="commission != null">commission = #{commission},</if>
            <if test="refundFee != null">refund_fee = #{refundFee},</if>
            <if test="platformDiscount != null">platform_discount = #{platformDiscount},</if>
            <if test="sellerDiscount != null">seller_discount = #{sellerDiscount},</if>
            <if test="memo != null">memo = #{memo},</if>
            <if test="finishedAt != null">finished_at = #{finishedAt},</if>
            <if test="checkedAt != null">checked_at = #{checkedAt},</if>
            updated_at = now()
        </set>
    </sql>

    <select id="findById" parameterType="long" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="list" parameterType="map" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <insert id="create" parameterType="OrderSettlement" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <update id="update" parameterType="OrderSettlement">
        UPDATE
        <include refid="tb"/>
        <include refid="update_criteria"/>
        WHERE id = #{id}
    </update>

    <select id="findBySellerId" parameterType="long" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE seller_id = #{sellerId}
    </select>

    <select id="findByShopId" parameterType="long" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId}
    </select>

    <select id="findByShopIds" parameterType="long" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id IN
        <foreach item="shopId" collection="list"
                 open="(" separator="," close=")">
            #{shopId}
        </foreach>
    </select>

    <select id="findByOrderId" parameterType="long" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE order_id=#{orderId} LIMIT 1
    </select>

    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="OrderSettlementMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY id DESC LIMIT #{offset}, #{limit}
    </select>


    <!-- 查询需指定对账状态的记录 -->
    <sql id="queryCondition">
        WHERE is_checked = #{isChecked}
    </sql>

    <select id="pagingByIsChecked" parameterType="map" resultMap="OrderSettlementMap">
        select id, <include refid="cols_all"/>
        from <include refid="tb"/>
        <include refid="queryCondition"/>
        order by id desc limit #{offset},#{limit}
    </select>

    <select id="countByIsChecked" parameterType="map" resultType="long">
        select count(1)
        from <include refid="tb"/>
        <include refid="queryCondition"/>
    </select>


    <!-- 商家日汇总 -->


    <resultMap id="dailySumMap" type="SettlementSumOfDailyDto">
        <result column="seller_id" property="sellerId"/>
        <result column="seller_name" property="sellerName"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="order_count" property="orderCount"/>
        <result column="fee" property="fee"/>
        <result column="origin_fee" property="originFee"/>
        <result column="seller_discount" property="sellerDiscount"/>
        <result column="ship_fee" property="shipFee"/>
        <result column="receivable" property="receivable"/>
        <result column="platform_discount" property="platformDiscount"/>
        <result column="refund_fee" property="refundFee"/>
        <result column="commission" property="commission"/>
        <result column="integral" property="integral"/>
        <result column="third_party_fee" property="thirdPartyFee"/>
        <result column="sale_tax" property="saleTax"/>
    </resultMap>


    <select id="sumSellerSettlement" parameterType="map"  resultMap="dailySumMap">
        select  count(1) as order_count,
        seller_id as seller_id,
        seller_name as seller_name,
        shop_id as shop_id,
        shop_name as shop_name,
        sum(fee) as fee,
        sum(origin_fee) as origin_fee,
        sum(ship_fee) as ship_fee,
        sum(receivable) as receivable,
        sum(seller_discount) as seller_discount,
        sum(platform_discount) as platform_discount,
        sum(refund_fee) as refund_fee,
        sum(commission) as commission,
        sum(sale_tax) as sale_tax,
        sum(integral) as integral,
        sum(third_party_fee) as third_party_fee
        from  <include refid="tb"/>
        WHERE <![CDATA[ checked_at >= #{startAt} ]]> AND <![CDATA[ checked_at < #{endAt}]]>
        group by shop_id
    </select>


    <select id="sumSellerSettlementByPayType" parameterType="map"  resultMap="dailySumMap">
        select  count(1) as order_count,
        seller_id as seller_id,
        seller_name as seller_name,
        shop_id as shop_id,
        shop_name as shop_name,
        sum(fee) as fee,
        sum(origin_fee) as origin_fee,
        sum(ship_fee) as ship_fee,
        sum(receivable) as receivable,
        sum(seller_discount) as seller_discount,
        sum(platform_discount) as platform_discount,
        sum(refund_fee) as refund_fee,
        sum(commission) as commission,
        sum(sale_tax) as sale_tax,
        sum(integral) as integral,
        sum(third_party_fee) as third_party_fee
        from  <include refid="tb"/>
        WHERE <![CDATA[ checked_at >= #{startAt} ]]> AND <![CDATA[ checked_at < #{endAt}]]> AND pay_type=#{payType}
        group by shop_id
    </select>


    <select id="sumPlatformSettlement" parameterType="map"  resultMap="dailySumMap">
        select  count(1) as order_count,
        sum(fee) as fee,
        sum(origin_fee) as origin_fee,
        sum(ship_fee) as ship_fee,
        sum(receivable) as receivable,
        sum(seller_discount) as seller_discount,
        sum(platform_discount) as platform_discount,
        sum(refund_fee) as refund_fee,
        sum(commission) as commission,
        sum(sale_tax) as sale_tax,
        sum(integral) as integral,
        sum(third_party_fee) as third_party_fee
        from  <include refid="tb"/>
        WHERE <![CDATA[ checked_at >= #{startAt} ]]> AND <![CDATA[ checked_at < #{endAt}]]>
    </select>


    <select id="sumPlatformSettlementByPayType" parameterType="map"  resultMap="dailySumMap">
        select  count(1) as order_count,
        sum(fee) as fee,
        sum(origin_fee) as origin_fee,
        sum(ship_fee) as ship_fee,
        sum(receivable) as receivable,
        sum(seller_discount) as seller_discount,
        sum(platform_discount) as platform_discount,
        sum(refund_fee) as refund_fee,
        sum(commission) as commission,
        sum(sale_tax) as sale_tax,
        sum(integral) as integral,
        sum(third_party_fee) as third_party_fee
        from  <include refid="tb"/>
        WHERE <![CDATA[ checked_at >= #{startAt} ]]> AND <![CDATA[ checked_at < #{endAt}]]> AND pay_type=#{payType}
    </select>



</mapper>