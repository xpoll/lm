<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SkuTemplate">

    <resultMap id="SkuTemplateMap" type="SkuTemplate">
        <id property="id" column="id"/>
        <result column="sku_code" property="skuCode"/>
        <result column="spu_id" property="spuId"/>
        <result column="specification" property="specification"/>
        <result column="status" property="status"/>
        <result column="extra_price_json" property="extraPriceJson"/>
        <result column="price" property="price"/>
        <result column="image" property="image"/>
        <result column="thumbnail" property="thumbnail"/>
        <result column="name" property="name"/>
        <result column="attrs_json" property="attrsJson"/>
        <result column="stock_type" property="stockType"/>
        <result column="stock_quantity" property="stockQuantity"/>
        <result column="extra" property="extraJson"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_sku_templates
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        sku_code, spu_id, specification, status, extra_price_json, price, image,
        thumbnail, `name`, attrs_json, stock_type, stock_quantity, extra, created_at, updated_at
    </sql>

    <sql id="vals">
        #{skuCode}, #{spuId}, #{specification},#{status}, #{extraPriceJson}, #{price},
        #{image}, #{thumbnail}, #{name},#{attrsJson},#{stockType}, #{stockQuantity}, #{extraJson}, now(), now()
    </sql>


    <insert id="create" parameterType="SkuTemplate" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <insert id="creates" parameterType="list">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        <foreach collection="list" item="i" index="index" separator=",">
            (
            #{i.skuCode}, #{i.spuId}, #{i.specification}, #{i.status},
            #{i.extraPriceJson}, #{i.price}, #{i.image}, #{i.thumbnail}, #{i.name},#{i.attrsJson}, #{i.stockType},
            #{i.stockQuantity}, #{i.extraJson}, now(), now()
            )
        </foreach>
    </insert>

    <select id="findById" parameterType="long" resultMap="SkuTemplateMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="SkuTemplateMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


    <select id="findBySkuCode" parameterType="string" resultMap="SkuTemplateMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE sku_code=#{skuCode}
    </select>

    <select id="findBySpuId" parameterType="long" resultMap="SkuTemplateMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE spu_id = #{spuId} and status!=-3
    </select>

    <select id="findBySpuIdAndSkuCode" parameterType="map" resultMap="SkuTemplateMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE spu_id=#{spuId} AND sku_code=#{skuCode}
    </select>


    <delete id="delete" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </delete>

    <delete id="deleteBySpuId" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE spu_id = #{spuId}
    </delete>

    <update id="update" parameterType="SkuTemplate">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="skuCode != null">sku_code = #{skuCode},</if>
            <if test="specification != null">specification = #{specification},</if>
            <if test="status !=null">status = #{status},</if>
            <if test="extraPriceJson != null">extra_price_json = #{extraPriceJson},</if>
            <if test="price != null">price = #{price},</if>
            <if test="image != null">image = #{image},</if>
            <if test="thumbnail != null">thumbnail = #{thumbnail},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="attrsJson != null">attrs_json = #{attrsJson},</if>
            <if test="stockType != null">stock_type = #{stockType},</if>
            <if test="stockQuantity != null">stock_quantity = #{stockQuantity},</if>
            <if test="extraJson != null">extra = #{extraJson},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateBySpuIdAndSkuCode" parameterType="SkuTemplate">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="specification != null">specification = #{specification},</if>
            <if test="extraPriceJson != null">extra_price_json = #{extraPriceJson},</if>
            <if test="price != null">price = #{price},</if>
            <if test="image != null">image = #{image},</if>
            <if test="thumbnail != null">thumbnail = #{thumbnail},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="attrsJson != null">attrs_json = #{attrsJson},</if>
            <if test="stockType != null">stock_type = #{stockType},</if>
            <if test="stockQuantity != null">stock_quantity = #{stockQuantity},</if>
            <if test="extraJson != null">extra = #{extraJson},</if>
            updated_at = now()
        </set>
        WHERE spu_id=#{spuId} and sku_code=#{skuCode}
    </update>

    <update id="updateStatusBySpuId" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET status = #{status}, updated_at = now()
        WHERE spu_id = #{spuId}
    </update>
</mapper>
