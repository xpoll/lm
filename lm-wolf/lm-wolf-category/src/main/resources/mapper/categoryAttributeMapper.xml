<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="CategoryAttribute">

    <resultMap id="CategoryAttributeMap" type="CategoryAttribute">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="attr_key" property="attrKey"/>
        <result column="group" property="group"/>
        <result column="index" property="index"/>
        <result column="status" property="status"/>
        <result column="attr_metas_json" property="attrMetasJson"/>
        <result column="attr_vals_json" property="attrValsJson"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_category_attributes
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        category_id , attr_key, `group`, `index`, status, attr_metas_json, attr_vals_json, created_at, updated_at
    </sql>

    <sql id="vals">
        #{categoryId}, #{attrKey}, #{group}, #{index}, #{status}, #{attrMetasJson}, #{attrValsJson}, now(), now()
    </sql>



    <insert id="create" parameterType="CategoryAttribute" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="CategoryAttributeMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="CategoryAttributeMap">
        SELECT id,
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach collection="list" separator="," open="("
                 close=")" item="id">
            #{id}
        </foreach>
    </select>


    <select id="findByCategoryId" parameterType="long" resultMap="CategoryAttributeMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE category_id = #{categoryId} and status = 1 order by `index` asc
    </select>

    <select id="findByCategoryIdAndAttrKey" parameterType="map" resultMap="CategoryAttributeMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE category_id = #{categoryId} and attr_key = #{attrKey}
    </select>

    <select id="count" parameterType="long"  resultType="integer">
        SELECT count(1)
        FROM
        <include refid="tb"/>
        WHERE category_id = #{categoryId} and status=1
    </select>

    <select id="categoryMaxIndexId" parameterType="long"  resultType="integer">
        SELECT max(`index`)
        FROM
        <include refid="tb"/>
        WHERE category_id = #{categoryId}
    </select>


    <update id="updateStatus" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET status = #{status}
        WHERE id = #{id}
    </update>


    <update id="updateIndex" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET `index` = #{index}
        WHERE id = #{id}
    </update>

    <update id="update" parameterType="CategoryAttribute">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="attrKey != null">attr_key = #{attrKey},</if>
            <if test="group!=null">`group`=#{group},</if>
            <if test="status!=null">status=#{status},</if>
            <if test="index!=null">index=#{index},</if>
            <if test="attrMetasJson != null">attr_metas_json = #{attrMetasJson},</if>
            <if test="attrValsJson!=null">attr_vals_json = #{attrValsJson},</if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id=#{id}
    </delete>
</mapper>