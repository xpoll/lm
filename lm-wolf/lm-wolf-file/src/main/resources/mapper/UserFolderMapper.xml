<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="UserFolder">
    <resultMap id="UserFolderMap" type="UserFolder">
        <id column="id" property="id"/>
        <result column="create_by" property="createBy"/>
        <result column="group" property="group"/>
        <result column="pid" property="pid"/>
        <result column="level" property="level"/>
        <result column="has_children" property="hasChildren"/>
        <result column="folder" property="folder"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_user_folders
    </sql>

    <sql id="cols_all">
      id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
      create_by, `group`, pid, level, has_children, folder, created_at, updated_at
    </sql>

    <sql id="vals">
        #{createBy}, #{group}, #{pid}, #{level}, #{hasChildren}, #{folder}, now(), now()
    </sql>

    <sql id="criteria">
        WHERE 1 = 1
        <if test="group != null"> AND `group` = #{group}</if>
        <if test="pid != null"> AND pid = #{pid}</if>
        <if test="createBy != null"> AND create_by = #{createBy}</if>
    </sql>

    <select id="findById" parameterType="long" resultMap="UserFolderMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="list" parameterType="map" resultMap="UserFolderMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <where>
            <if test="createBy!=null"> and create_by=#{createBy} </if>
            <if test="folder!=null"> and folder=#{folder}</if>
            <if test="group!=null"> and `group`=#{group} </if>
            <if test="pid!=null">and pid=#{pid}</if>
            <if test="level!=null">and level=#{level}</if>
        </where>
    </select>

    <insert id="create" parameterType="UserFolder" keyProperty="id" useGeneratedKeys="true">
      INSERT INTO
      <include refid="tb" />
      (<include refid="cols_exclude_id" />)
      VALUES
      (<include refid="vals" />)
    </insert>

    <update id="update" parameterType="UserFolder">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="folder != null">folder = #{folder},</if>
            <if test="group != null">`group` = #{group},</if>
            <if test="pid != null">pid = #{pid},</if>
            <if test="level != null">level = #{level},</if>
            updated_at=now()
        </set>
        WHERE id=#{id}
    </update>

    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="UserFolderMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY id DESC
        LIMIT #{offset}, #{limit}
    </select>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb" />
        WHERE id = #{id}
    </delete>
</mapper>