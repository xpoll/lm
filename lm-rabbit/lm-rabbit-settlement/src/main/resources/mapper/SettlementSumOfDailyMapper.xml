<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="SettlementSumOfDaily">
    <resultMap id="SettlementSumOfDailyMap" type="SettlementSumOfDaily">
        <id column="id" property="id"/>
        <result column="order_count" property="orderCount"/>
        <result column="fee" property="fee"/>
        <result column="origin_fee" property="originFee"/>
        <result column="seller_discount" property="sellerDiscount"/>
        <result column="ship_fee" property="shipFee"/>
        <result column="receivable" property="receivable"/>
        <result column="platform_discount" property="platformDiscount"/>
        <result column="refund_fee" property="refundFee"/>
        <result column="commission" property="commission"/>
        <result column="integral" property="integral"/>
        <result column="third_party_fee" property="thirdPartyFee"/>
        <result column="sale_tax" property="saleTax"/>
        <result column="sum_at" property="sumAt"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_settlements_sum_of_dailys
    </sql>

    <sql id="cols_all">
      id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
      order_count, fee,  origin_fee, seller_discount, ship_fee, receivable,platform_discount ,  refund_fee, commission, integral,
      third_party_fee ,sale_tax, sum_at,created_at, updated_at
    </sql>

    <sql id="vals">
        #{orderCount}, #{fee}, #{originFee},#{sellerDiscount},#{shipFee},#{receivable},#{platformDiscount},   #{refundFee}, #{commission},
        #{integral},#{thirdPartyFee}, #{saleTax},#{sumAt}, now(), now()
    </sql>

    <sql id="criteria">
        WHERE 1 = 1
        <if test="startAt != null"> AND <![CDATA[ sum_at >= #{startAt} ]]> </if>
        <if test="endAt != null"> AND <![CDATA[ sum_at < #{endAt}]]> </if>
    </sql>

    <select id="load" parameterType="long" resultMap="SettlementSumOfDailyMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <insert id="create" parameterType="SettlementSumOfDaily" keyProperty="id" useGeneratedKeys="true">
      INSERT INTO
      <include refid="tb" />
      (<include refid="cols_exclude_id" />)
      VALUES
      (<include refid="vals" />)
    </insert>

    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="SettlementSumOfDailyMap">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY id DESC LIMIT #{offset}, #{limit}
    </select>


    <select id="loads" parameterType="list" resultMap="SettlementSumOfDailyMap">
        SELECT id,
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach collection="list" separator="," open="("
                 close=")" item="id">
            #{id}
        </foreach>
    </select>



    <select id="findBySumAt" parameterType="date" resultMap="SettlementSumOfDailyMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE sum_at = #{sumAt} limit 1
    </select>

    <delete id="deleteSumAt" parameterType="date">
        DELETE FROM <include refid="tb"/>
        WHERE sum_at = #{sumAt}
    </delete>

    <update id="updateCommissionById" parameterType="SettlementSumOfDaily">
        UPDATE <include refid="tb"/>
        SET commission = #{commission},updated_at=now()
        WHERE id = #{id}
    </update>


</mapper>