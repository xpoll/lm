<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserVatInvoice">
    <resultMap id="UserVatInvoiceMap" type="UserVatInvoice">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="companyName" column="company_name"/>
        <result property="taxRegisterNo" column="tax_register_no"/>
        <result property="registerAddress" column="register_address"/>
        <result property="registerPhone" column="register_phone"/>
        <result property="registerBank" column="register_bank"/>
        <result property="bankAccount" column="bank_account"/>
        <result property="taxCertificate" column="tax_certificate"/>
        <result property="taxpayerCertificate" column="taxpayer_certificate"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="tb">
        parana_user_vat_invoices
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        user_id, company_name, tax_register_no,
        register_address, register_phone, register_bank,
        bank_account, tax_certificate, taxpayer_certificate,
        created_at, updated_at
    </sql>

    <sql id="vals">
        #{userId}, #{companyName}, #{taxRegisterNo}, #{registerAddress}, #{registerPhone}, #{registerBank},
        #{bankAccount}, #{taxCertificate}, #{taxpayerCertificate}, now(), now()
    </sql>

    <sql id="criteria">
        <where>
          <if test="userId != null">AND user_id = #{userId}</if>
          <if test="companyName != null">AND company_name = #{companyName}</if>
          <if test="taxRegisterNo != null">AND tax_register_no = #{taxRegisterNo}</if>
          <if test="registerAddress != null">AND register_address = #{registerAddress}</if>
          <if test="registerPhone != null">AND register_phone = #{registerPhone}</if>
          <if test="registerBank != null">AND register_bank = #{registerBank}</if>
          <if test="bankAccount != null">AND bank_account = #{bankAccount}</if>
          <if test="taxCertificate != null">AND tax_certificate = #{taxCertificate}</if>
          <if test="taxpayerCertificate != null">AND taxpayer_certificate = #{taxpayerCertificate}</if>
        </where>
    </sql>

    <insert id="create" parameterType="UserVatInvoice" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="UserVatInvoiceMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="UserVatInvoiceMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update" parameterType="UserVatInvoice">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="companyName != null">company_name = #{companyName},</if>
            <if test="taxRegisterNo != null">tax_register_no = #{taxRegisterNo},</if>
            <if test="registerAddress != null">register_address = #{registerAddress},</if>
            <if test="registerPhone != null">register_phone = #{registerPhone},</if>
            <if test="registerBank != null">register_bank = #{registerBank},</if>
            <if test="bankAccount != null">bank_account = #{bankAccount},</if>
            <if test="taxCertificate != null">tax_certificate = #{taxCertificate},</if>
            <if test="taxpayerCertificate != null">taxpayer_certificate = #{taxpayerCertificate},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </delete>

    <!--  查询记录数  -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT (1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!--  分页  -->
    <select id="paging" parameterType="map" resultMap="UserVatInvoiceMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        LIMIT #{offset}, #{limit}
    </select>

    <select id="findByUserId" parameterType="long" resultMap="UserVatInvoiceMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE user_id = #{userId}
        LIMIT 1
    </select>

</mapper>
