<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="OrderMoneyFlow">
    <resultMap id="OrderMoneyFlowMap" type="OrderMoneyFlow">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="order_type" property="orderType"/>
        <result column="seller_id" property="sellerId"/>
        <result column="seller_name" property="sellerName"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="buyer_id" property="buyerId"/>
        <result column="buyer_name" property="buyerName"/>
        <result column="type" property="type"/>
        <result column="pay_type" property="payType"/>
        <result column="channel" property="channel"/>
        <result column="system_no" property="systemNo"/>
        <result column="trade_no" property="tradeNo"/>
        <result column="payment_code" property="paymentCode"/>
        <result column="batch_no" property="batchNo"/>
        <result column="fee" property="fee"/>
        <result column="memo" property="memo"/>
        <result column="trade_at" property="tradeAt"/>
        <result column="is_settlemented" property="isSettlemented"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        parana_order_money_flows
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        order_id, order_type, seller_id, seller_name, shop_id, shop_name, buyer_id, buyer_name,
        `type`, pay_type, channel, system_no, trade_no, payment_code, batch_no, fee,
        memo, trade_at, is_settlemented, created_at, updated_at
    </sql>

    <sql id="vals">
        #{orderId}, #{orderType}, #{sellerId}, #{sellerName}, #{shopId}, #{shopName}, #{buyerId}, #{buyerName},
        #{type}, #{payType}, #{channel}, #{systemNo}, #{tradeNo}, #{paymentCode}, #{batchNo}, #{fee},
        #{memo}, now(), #{isSettlemented}, now(), now()
    </sql>

    <sql id="queryCondition2">
        WHERE is_settlemented = false
    </sql>

    <insert id="create" parameterType="OrderMoneyFlow" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <update id="update" parameterType="OrderMoneyFlow">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="orderType != null"> order_type = #{orderType},</if>
            <if test="sellerId != null"> seller_id = #{sellerId},</if>
            <if test="sellerName != null"> seller_name = #{sellerName},</if>
            <if test="shopId != null"> shop_id = #{shopId},</if>
            <if test="shopName != null"> shop_name = #{shopName},</if>
            <if test="buyerId != null"> buyer_id = #{buyerId},</if>
            <if test="buyerName != null"> buyer_name = #{buyerName},</if>
            <if test="type != null"> type = #{type},</if>
            <if test="payType != null"> pay_type = #{payType},</if>
            <if test="channel != null"> channel = #{channel},</if>
            <if test="systemNo != null"> system_no = #{systemNo},</if>
            <if test="tradeNo != null"> trade_no = #{tradeNo},</if>
            <if test="paymentCode != null"> payment_code = #{paymentCode},</if>
            <if test="batchNo != null"> batch_no = #{batchNo},</if>
            <if test="fee != null"> fee = #{fee},</if>
            <if test="memo != null"> memo = #{memo},</if>
            <if test="isSettlemented != null"> is_settlemented = #{isSettlemented},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>



    <select id="findById" parameterType="long" resultMap="OrderMoneyFlowMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>



    <select id="pagingNeedSettlement" parameterType="map" resultMap="OrderMoneyFlowMap">
        select id, <include refid="cols_exclude_id"/>
        from <include refid="tb"/>
        <include refid="queryCondition2"/>
        order by id desc limit #{offset},#{limit}
    </select>

    <select id="countNeedSettlement" parameterType="map" resultType="long">
        select count(1)
        from <include refid="tb"/>
        <include refid="queryCondition2"/>
    </select>

    <update id="updateSettlemented" parameterType="long">
        UPDATE <include refid="tb"/>
        set is_settlemented= true,updated_at=now()
        WHERE id = #{id}
    </update>

</mapper>